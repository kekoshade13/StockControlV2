@layout AdminLayout
@page "/administration/equipos"

<MudGrid>
    <MudItem xs="12" md="10">
        <MudTable @ref="_table" ServerData="ServerReload" Dense Hover Context="equipo">
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Nombre</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@equipo.Id_Equip</MudTd>
                <MudTd>@equipo.NameEquip</MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.RemoveRedEye" Color="Color.Inherit" OnClick="() => OpenViewDialog(equipo.Id_Equip)" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="() => Delete(equipo.Id_Equip)" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudItem>
    <MudItem xs="12" md="2">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OpenCreateDialog">Crear equipo</MudButton>
    </MudItem>
</MudGrid>